<h1> Transactions for <%= user.username %> </h1>
<p> Here is your list of things to do! </p>

<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>
        <a class="btn btn-lg btn-primary" href="/transaction/byCategory">
          group by category
        </a>
      </th>
      <th>
        <a class="btn btn-lg btn-primary" href="/transaction?sortBy=category">
          sort by category
        </a>
      </th>
      <th>
        <a class="btn btn-lg btn-primary" href="/transaction?sortBy=amount">
          sort by amount
        </a>
      </th>
      <th>
        <a class="btn btn-lg btn-primary" href="/transaction?sortBy=description">
          sort by description
        </a>
      </th>
      <th>
        <a class="btn btn-lg btn-primary" href="/transaction?sortBy=date">
          sort by date
        </a>
      </th>
    </tr>
  </thead>
  <tbody></tbody>
</table>
<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>description</th>
      <th>amount</th>
      <th>category</th>
      <th>date</th>
      <th>delete</th>
      <th>edit</th>
    </tr>
  </thead>
  <tbody>
    <% items.map(item => {%>
      <tr>
        <td><%= item.description %></td>
        <td><%= item.amount %></td>
        <td><%= item.category %></td>
        <td><%= item.date.toDateString() %></td>
        <td>
          <a href="/transaction/remove/<%=item._id %>">
            <i class="bi bi-trash"></i>
          </a>
        </td>
        <td>
          <a href="/transaction/edit/<%=item._id %>">
            <i class="bi bi-pencil-square"></i>
          </a>
        </td>
      </tr>
    <% }) %>
  </tbody>
</table>
<h1> Add a New Transaction </h1>
<form method="post" action="transaction">
  <input type="text" name="description" placeholder="description"><br>
  <input type="text" name="category" placeholder="category"><br>
  <input type="text" name="amount" placeholder="amount"><br>
  <input type="text" name="date" placeholder="mm/dd/yyyy"><br>
  <input type="submit" value="store">
</form>